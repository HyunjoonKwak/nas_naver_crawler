# NAS 환경용 네이버 부동산 크롤러 설정

# 출력 디렉토리 설정 (크롤링된 데이터가 저장될 폴더)
OUTPUT_DIR=./crawled_data

# 요청 간격 설정 (초) - 너무 빠르게 요청하면 차단될 수 있음
REQUEST_DELAY=2.0

# 페이지 타임아웃 설정 (밀리초)
# 네이버 부동산은 로딩이 느리므로 60초로 설정
TIMEOUT=60000

# 헤드리스 모드 설정 (true: 화면 없이 실행, false: 브라우저 창 표시)
HEADLESS=true

# ===== 재시도 및 오류 복구 설정 =====

# 최대 재시도 횟수 (페이지 로딩 실패 시)
MAX_RETRIES=3

# 재시도 간격 (초) - 지수 백오프 적용 (5초 → 10초 → 20초)
RETRY_DELAY=5.0

# 크롤링 대상 단지 번호들 (쉼표로 구분)
# 예: COMPLEX_NUMBERS=22065,12345,67890
COMPLEX_NUMBERS=22065

# ===== 국가 API 설정 (현재 시스템 문제로 작동 안 함) =====

# 1. 통계청 SGIS API 설정 (역지오코딩용)
# https://sgis.kostat.go.kr/developer/에서 발급받을 수 있습니다
# 회원가입 → 서비스 신청 → 서비스 ID와 보안키 발급
# 용도: 위도/경도 → 법정동/행정동 변환
SGIS_SERVICE_ID=your_service_id_here
SGIS_SECURITY_KEY=your_security_key_here

# 2. 공공데이터포털 국토교통부 실거래가 API (실거래가 조회용)
# https://www.data.go.kr/에서 발급받을 수 있습니다
# 데이터명: "아파트매매 실거래 상세 자료"
# API 신청 → 활용신청 → 일반 인증키(Encoding) 발급
# 용도: 단지의 실거래가 정보 조회
MOLIT_SERVICE_KEY=your_service_key_here

# 네이버 Maps API 설정 (역지오코딩용 - 법정동 정확히 반환)
# https://www.ncloud.com/에서 발급받을 수 있습니다
# Maps → Reverse Geocoding API 활성화 필요
# ⚠️ 실제 키는 .env.local 또는 Docker 환경 변수로 설정하세요
NAVER_MAPS_CLIENT_ID=your_naver_client_id_here
NAVER_MAPS_CLIENT_SECRET=your_naver_client_secret_here

# 로그 레벨 설정 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 데이터 저장 형식 설정 (json, csv, both)
SAVE_FORMAT=both

# 스케줄링 설정 (cron 형식으로 설정)
# 예: 매일 오전 9시에 실행하려면: SCHEDULE=0 9 * * *
SCHEDULE=

# 알림 설정 (선택사항)
# 이메일 알림을 받으려면 설정
EMAIL_NOTIFICATIONS=false
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# 웹훅 알림 설정 (선택사항)
# 슬랙이나 디스코드 등으로 알림을 받으려면 설정
WEBHOOK_URL=

# 프록시 설정 (선택사항)
# 프록시를 사용하려면 설정
USE_PROXY=false
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# ===== 내부 API 시크릿 (보안 중요!) =====
# 스케줄러 등 내부 API 호출 시 사용하는 비밀키
# 반드시 강력한 랜덤 문자열로 변경하세요!
# 생성 명령: openssl rand -base64 32
INTERNAL_API_SECRET=change-this-to-random-string-in-production
